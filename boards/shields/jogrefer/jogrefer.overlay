#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix-transform = &default_transform;
	};

	default_transform: matrix_transform {
		compatible = "zmk,matrix-transform";
		rows = <5>;
		columns  = <14>;
		map = <
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13)
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
			RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13)
			RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11) RC(4,12) RC(4,13)
		>;
	};

	kscan0: kscan {
		compatible = "zmk-kscan-gpio-matrix";
		diode-direction = "col2row";
		debounce-scan-period-ms = <3>;
		poll-period-ms = <30>;
		init-delay-ms = <1000>;
		toggle-mode;
		wakeup-source;
		col-gpios =
//																						06 08 17 20 22 24 100
		<&gpio P0.06 GPIO_ACTIVE_HIGH>, // colunma 1 de la izq		╭────────────────────╮
		<&gpio P0.08 GPIO_ACTIVE_HIGH>, // colunma 2 de la izq		│  ×  1  2  3  4  5	│		113
		<&gpio P0.17 GPIO_ACTIVE_HIGH>, // colunma 3 de la izq		│  ⭾  F  M  N  G  X	╰─		111
		<&gpio P0.20 GPIO_ACTIVE_HIGH>, // colunma 4 de la izq		│  ⇪  D  T  R  S  L  Ç		10
		<&gpio P0.22 GPIO_ACTIVE_HIGH>, // colunma 5 de la izq		│  ´  Z  Q  H  C  K  [		09
		<&gpio P0.24 GPIO_ACTIVE_HIGH>, // colunma 6 de la izq		│  ⌗  ⌃  ⌥  ⌘  ␣  ←  ]		101
		<&gpio P1.00 GPIO_ACTIVE_HIGH>, // colunma 7 de la izq		╰──────────────────────
//																						11 104 106 31 29 02 115
		<&gpio P0.11 GPIO_ACTIVE_HIGH>, // colunma 1 de la der		  ╭────────────────────╮
		<&gpio P1.04 GPIO_ACTIVE_HIGH>, // colunma 2 de la der		  │  6  7  8  9  0  \  │	113
		<&gpio P1.06 GPIO_ACTIVE_HIGH>, // colunma 3 de la der		──╯  W  V  B  P  Y  -  │	111
		<&gpio P0.31 GPIO_ACTIVE_HIGH>, // colunma 4 de la der		  ⏍  U  A  E  O  I  +  │	10
		<&gpio P0.29 GPIO_ACTIVE_HIGH>, // colunma 5 de la der		  <  Ñ  J  ,  .  /  ⇪  │	09
		<&gpio P0.02 GPIO_ACTIVE_HIGH>, // colunma 6 de la der		  ⌘  ↩︎  ␣  ←  ↑  ↓  →  │	101
		<&gpio P1.15 GPIO_ACTIVE_HIGH>; // colunma 7 de la der		───────────────────────╯

		row-gpios = 
		<&gpio P1.13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, //Fila 1		─╮
		<&gpio P1.11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, //Fila 2		 ┤
		<&gpio P0.10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, //Fila 3		 ┤
		<&gpio P0.09 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, //Fila 4		 ┤
		<&gpio P1.01 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>; //Fila 5		─╯
	};
};